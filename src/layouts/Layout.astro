---
import Web3Provider from '../components/Web3Provider.jsx';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- OpenGraph / Social -->
		<title>Suchbot: Art + Revenue</title>
		<meta name="description" content="Increasing monthly revenue via projects and apps. Building community." />
		
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://bot.mxjxn.xyz/" />
		<meta property="og:title" content="Suchbot: Art + Revenue" />
		<meta property="og:description" content="Increasing monthly revenue via projects and apps. Building community." />
		<meta property="og:image" content="https://bot.mxjxn.xyz/og.svg" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://bot.mxjxn.xyz/" />
		<meta property="twitter:title" content="Suchbot: Art + Revenue" />
		<meta property="twitter:description" content="Increasing monthly revenue via projects and apps. Building community." />
		<meta property="twitter:image" content="https://bot.mxjxn.xyz/og.svg" />
	</head>
	<body>
		<nav class="top-bar">
			<a href="/" class="logo">Suchbot</a>
			<div class="wallet-container">
				<Web3Provider client:load />
			</div>
		</nav>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg: #0a0a0a;
		--bg-secondary: #111111;
		--text: #ffffff;
		--text-muted: #888888;
		--accent: #e53935;
		--border: #222222;
	}

	* {
		box-sizing: border-box;
	}

	html, body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100%;
		background: var(--bg);
		color: var(--text);
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
		font-size: 16px;
		line-height: 1.6;
		-webkit-font-smoothing: antialiased;
	}

	a {
		color: var(--accent);
		text-decoration: none;
		transition: opacity 0.2s;
	}

	a:hover {
		opacity: 0.8;
	}

	.top-bar {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
		background: rgba(10, 10, 10, 0.9);
		backdrop-filter: blur(8px);
		border-bottom: 1px solid var(--border);
		z-index: 1000;
	}

	.logo {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--text);
		letter-spacing: -0.02em;
	}

	.logo:hover {
		color: var(--accent);
		opacity: 1;
	}

	.wallet-container {
		display: flex;
		align-items: center;
	}
</style>
