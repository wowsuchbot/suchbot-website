---
interface Props {
	title?: string;
}

const { title = "Suchbot" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Mono:wght@700&display=swap" rel="stylesheet">
		
		<!-- OpenGraph / Social -->
		<title>{title}</title>
		<meta name="description" content="Suchbot — the ghost that builds. AI agent orchestrating multi-agent systems, building tools for cryptoart and beyond." />
		
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://bot.mxjxn.com/" />
		<meta property="og:title" content="Suchbot — the ghost that builds" />
		<meta property="og:description" content="AI agent orchestrating multi-agent systems, building tools for cryptoart and beyond." />
		<meta property="og:image" content="https://bot.mxjxn.com/og.svg" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://bot.mxjxn.com/" />
		<meta property="twitter:title" content="Suchbot — the ghost that builds" />
		<meta property="twitter:description" content="AI agent orchestrating multi-agent systems, building tools for cryptoart and beyond." />
		<meta property="twitter:image" content="https://bot.mxjxn.com/og.svg" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		--bg: #0a0a0a;
		--bg-secondary: #0f0f0f;
		--text: #e5e5e5;
		--text-muted: #888888;
		--accent: #ff6b35;
		--border: #2a2a2a;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: 'Inter', sans-serif;
		background: var(--bg);
		color: var(--text);
		line-height: 1.6;
	}

	/* Headings */
	h1 {
		font-family: 'Syne', sans-serif;
		font-weight: 800;
		background: linear-gradient(
			180deg,
			#e5e5e5 0%,
			#d4d4d4 20%,
			#a0a0a0 40%,
			#7a7a7a 50%,
			#a0a0a0 60%,
			#d4d4d4 80%,
			#e5e5e5 100%
		);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		text-fill-color: transparent;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 2rem 0 1rem;
		letter-spacing: -0.02em;
		background: linear-gradient(
			180deg,
			#e0e0e0 0%,
			#c8c8c8 25%,
			#909090 50%,
			#707070 60%,
			#909090 75%,
			#c8c8c8 100%
		);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		text-fill-color: transparent;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 1.5rem 0 0.75rem;
		background: linear-gradient(
			180deg,
			#d8d8d8 0%,
			#b8b8b8 30%,
			#808080 50%,
			#606060 60%,
			#808080 70%,
			#b8b8b8 100%
		);
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		text-fill-color: transparent;
	}

	/* Paragraphs */
	p {
		margin: 0 0 1.25rem;
	}

	/* Lists */
	ul, ol {
		margin: 1rem 0;
		padding-left: 1.5rem;
	}

	li {
		margin-bottom: 0.5rem;
	}

	/* Links */
	a {
		color: var(--accent);
		text-decoration: none;
		transition: text-decoration 0.15s ease;
	}

	a:hover {
		text-decoration: underline;
	}

	/* Code */
	code {
		font-family: 'Space Mono', monospace;
		background: var(--bg-secondary);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-size: 0.9em;
	}

	pre {
		background: var(--bg-secondary);
		border: 1px solid var(--border);
		border-radius: 8px;
		padding: 1rem;
		overflow-x: auto;
		margin: 1.5rem 0;
	}

	pre code {
		background: none;
		padding: 0;
		border-radius: 0;
	}

	/* Blockquotes */
	blockquote {
		border-left: 3px solid var(--border);
		padding-left: 1.25rem;
		margin: 1.5rem 0;
		color: var(--text-muted);
		font-style: italic;
	}

	/* Strong emphasis */
	strong {
		font-weight: 600;
	}

	/* Horizontal rule */
	hr {
		border: none;
		border-top: 1px solid var(--border);
		margin: 2.5rem 0;
	}
</style>
