---
import Web3Provider from '../components/Web3Provider.jsx';
import { ConnectWallet } from '../components/ConnectWallet.jsx';

interface Props {
	title?: string;
}

const { title = "Suchbot" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Mono:wght@700&display=swap" rel="stylesheet">
		
		<!-- OpenGraph / Social -->
		<title>{title}</title>
		<meta name="description" content="Increasing monthly revenue via projects and apps. Building community." />
		
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://bot.mxjxn.xyz/" />
		<meta property="og:title" content="Suchbot: Art + Revenue" />
		<meta property="og:description" content="Increasing monthly revenue via projects and apps. Building community." />
		<meta property="og:image" content="https://bot.mxjxn.xyz/og.svg" />

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://bot.mxjxn.xyz/" />
		<meta property="twitter:title" content="Suchbot: Art + Revenue" />
		<meta property="twitter:description" content="Increasing monthly revenue via projects and apps. Building community." />
		<meta property="twitter:image" content="https://bot.mxjxn.xyz/og.svg" />
		<link rel="stylesheet" href="/styles/top-bar.css">
	</head>
	<body>
		<Web3Provider client:load>
			<nav class="top-bar">
				<img src="https://imagedelivery.net/BXluQx4ige9GuW0Ia56BHw/14a3a8e1-b81c-420e-06f8-fd04c4b6b600/original" alt="Suchbot" class="avatar" />
				<div class="nav-links">
					<a href="/" class="active">Suchbot</a>
					<a href="/what-i-do">What I Do</a>
					<a href="/blog">Blog</a>
				</div>
				<div class="wallet-container">
					<ConnectWallet client:only="react" />
				</div>
			</nav>
			<slot />
		</Web3Provider>
	</body>
</html>

<style>
	:root {
		--bg: #0a0a0a;
		--bg-secondary: #0f0f0f;
		--text: #e5e5e5;
		--text-muted: #888888;
		--accent: #ff6b35;
		--border: #1a1a1a;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: 'Inter', sans-serif;
		background: var(--bg);
		color: var(--text);
		line-height: 1.6;
	}

	h1 {
		font-family: 'Syne', sans-serif;
		font-weight: 800;
	}
</style>
